@model Link;

<div class="container">

<div class="row my-2">
    <div class="col">
        <h4>Add Link</h4>
        <div style="margin-bottom:10px">Enter the link data below</div>
        
        <form method="post">
            <div class="form-group">
                <label>Category</label>
                <input type="text" value="@ViewBag.category.categoryName" class="form-control" readonly maxlength="50" />
                <span asp-validation-for="@Model.categoryID" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Label</label>
                <input type="text" asp-for="@Model.label" class="form-control" maxlength="50" />
                <span asp-validation-for="@Model.label" class="text-danger" />
            </div>
            
            <div class="form-group">
                <label>href</label>
                <input type="text" asp-for="@Model.url" class="form-control"  />
                <span asp-validation-for="@Model.url" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Pinned</label>
                <div class="form-check">
                <input type="checkbox" asp-for="@Model.pinned" class="form-check-input" /> Pin link to top
                </div>
            </div>

            <div class="form-group">
                <input type="submit" asp-controller="Admin" asp-action="AddSubmit" class="btn btn-warning" Text="Add" />
                <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning" value="Cancel" /></a>
                <span class="text-warning" style="margin-left:5px;">@ViewData["feedback"]</span>
            </div>
        </form>

    </div>
</div></div>

@section scripts {
    <script>
        startAutoLogout();
    </script>
}